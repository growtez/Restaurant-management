rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isSuperAdmin() {
      return isSignedIn() && request.auth.token.role == 'SUPER_ADMIN';
    }
    
    function isRestaurantAdmin(restaurantId) {
      return isSignedIn() 
        && request.auth.token.role == 'RESTAURANT_ADMIN'
        && request.auth.token.restaurantId == restaurantId;
    }
    
    // Validate image files
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    function isValidSize() {
      return request.resource.size < 5 * 1024 * 1024; // 5MB max
    }
    
    // ==========================================
    // Restaurant Assets
    // ==========================================
    
    match /restaurants/{restaurantId}/{allPaths=**} {
      // Public read access for restaurant assets
      allow read: if true;
      
      // Only restaurant admin or super admin can upload
      allow write: if (isRestaurantAdmin(restaurantId) || isSuperAdmin())
                   && isImage()
                   && isValidSize();
    }
    
    // ==========================================
    // User Uploads
    // ==========================================
    
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth.uid == userId
                   && isImage()
                   && isValidSize();
    }
    
    // ==========================================
    // Platform Assets (Super Admin only)
    // ==========================================
    
    match /platform/{allPaths=**} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
  }
}
