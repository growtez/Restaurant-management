rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==========================================
    // Helper Functions
    // ==========================================
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isSuperAdmin() {
      return isSignedIn() && request.auth.token.role == 'SUPER_ADMIN';
    }
    
    function isRestaurantAdmin(restaurantId) {
      return isSignedIn() 
        && request.auth.token.role == 'RESTAURANT_ADMIN'
        && request.auth.token.restaurantId == restaurantId;
    }
    
    function isRestaurantStaff(restaurantId) {
      return isSignedIn()
        && request.auth.token.role == 'RESTAURANT_STAFF'
        && request.auth.token.restaurantId == restaurantId;
    }
    
    function isRestaurantMember(restaurantId) {
      return isRestaurantAdmin(restaurantId) || isRestaurantStaff(restaurantId);
    }
    
    function isDeliveryPersonnel(restaurantId) {
      return isSignedIn()
        && request.auth.token.role == 'DELIVERY_PERSONNEL'
        && request.auth.token.restaurantId == restaurantId;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // ==========================================
    // SaaS Platform Settings
    // ==========================================
    
    match /saas/{document=**} {
      allow read: if true; // Plans are public
      allow write: if isSuperAdmin();
    }
    
    // ==========================================
    // Super Admins
    // ==========================================
    
    match /superAdmins/{userId} {
      allow read, write: if isSuperAdmin();
    }
    
    // ==========================================
    // Global Users
    // ==========================================
    
    match /users/{userId} {
      allow read: if isOwner(userId) || isSuperAdmin();
      allow create: if isSignedIn();
      allow update: if isOwner(userId) || isSuperAdmin();
      allow delete: if isSuperAdmin();
      
      // User addresses
      match /addresses/{addressId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // ==========================================
    // Restaurants
    // ==========================================
    
    match /restaurants/{restaurantId} {
      // Super admin full access
      allow read, write: if isSuperAdmin();
      
      // Restaurant admin can read and update their restaurant
      allow read: if isRestaurantAdmin(restaurantId);
      allow update: if isRestaurantAdmin(restaurantId);
      
      // Public read for active restaurants (for customer app)
      allow read: if resource.data.status == 'ACTIVE';
      
      // ==========================================
      // Subscription (Restaurant subdoc)
      // ==========================================
      match /subscription/{doc} {
        allow read: if isRestaurantAdmin(restaurantId);
        allow write: if isSuperAdmin();
      }
      
      // ==========================================
      // Branding (Restaurant subdoc)
      // ==========================================
      match /branding/{doc} {
        allow read: if true; // Public for theming
        allow write: if isRestaurantAdmin(restaurantId) || isSuperAdmin();
      }
      
      // ==========================================
      // Features (Restaurant subdoc)
      // ==========================================
      match /features/{doc} {
        allow read: if isRestaurantMember(restaurantId);
        allow write: if isSuperAdmin();
      }
      
      // ==========================================
      // Restaurant Users (Staff)
      // ==========================================
      match /users/{userId} {
        allow read: if isRestaurantMember(restaurantId) || isSuperAdmin();
        allow write: if isRestaurantAdmin(restaurantId) || isSuperAdmin();
      }
      
      // ==========================================
      // Menu Categories & Items
      // ==========================================
      match /menus/{path=**} {
        allow read: if true; // Public menu access
        allow write: if isRestaurantAdmin(restaurantId) || isSuperAdmin();
      }
      
      // ==========================================
      // Tables
      // ==========================================
      match /tables/{tableId} {
        allow read: if true; // Public for QR scanning
        allow write: if isRestaurantAdmin(restaurantId) || isSuperAdmin();
      }
      
      // ==========================================
      // Carts (Restaurant-scoped)
      // ==========================================
      match /carts/{cartId} {
        // Anyone can read/write their own cart (guest or authenticated)
        allow read, write: if true;
      }
      
      // ==========================================
      // Orders
      // ==========================================
      match /orders/{orderId} {
        // Restaurant staff can read all orders
        allow read: if isRestaurantMember(restaurantId) || isSuperAdmin();
        
        // Anyone can create an order (for QR ordering)
        allow create: if true;
        
        // Only restaurant staff can update orders
        allow update: if isRestaurantMember(restaurantId) 
                      || isDeliveryPersonnel(restaurantId)
                      || isSuperAdmin();
        
        // Customers can read their own orders
        allow read: if isSignedIn() && resource.data.customerId == request.auth.uid;
      }
      
      // ==========================================
      // Delivery
      // ==========================================
      match /delivery/{path=**} {
        allow read: if isRestaurantMember(restaurantId) 
                    || isDeliveryPersonnel(restaurantId)
                    || isSuperAdmin();
        allow write: if isRestaurantAdmin(restaurantId) || isSuperAdmin();
      }
      
      // ==========================================
      // Analytics
      // ==========================================
      match /analytics/{date} {
        allow read: if isRestaurantAdmin(restaurantId) || isSuperAdmin();
        allow write: if isSuperAdmin(); // Updated by Cloud Functions
      }
    }
  }
}
